<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/dialog_edit_name_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:padding="16dp"

    >

    <EditText
        android:id="@+id/dialog_edit_name_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/enter_your_name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <ImageButton
        android:id="@+id/dialog_edit_name_button_commit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@color/num_pad_button_background"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/dialog_edit_name_tv_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/dialog_edit_name_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/dialog_edit_name_tv_name"
        app:srcCompat="@drawable/ok_green"
        android:contentDescription="@string/ok" />

</androidx.constraintlayout.widget.ConstraintLayout>